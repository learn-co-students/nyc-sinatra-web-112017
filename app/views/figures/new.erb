<form action="/figures" method="post">
  <p>Name: <input type="text" name="figure[name]" id="figure_name"></p><br>
  <p>Title: <input type="text" name="title[name]" id="new_title"></p><br>
  <p>Landmark: <input type="text" name="landmark[name]" id="new_landmark"></p><br>
  <!-- <p>Existing Landmarks by ID: <input type="text" name="figure[landmark_ids][]" value=""></p> -->

  <%@titles.each do |title|%>
    <li><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input></li>
<%end%>


  <%@landmarks.each do |landmark|%>
    <li><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input></li>
<%end%>

  <input type="submit" value="submit" id="Create New Figure">
</form>
